<body>
    <!-- Topbar Start -->
        <%- include('../userLayouts/userHeader') %>
        

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/CSS/sb-admin-2.css" rel="stylesheet">

  <!-- Page Wrapper -->


        <!-- Content Wrapper -->
        <div class="container p-5 bg-dark mt-1">
          <h4 class="text-center text-white"><i class="fa fa-address-card"></i>  ADDRESSES</h4>
          <a href="/addAddress"><h6 class="text-center text-white"><i class="fa fa-plus"></i>  Add New</h6></a>
            <!-- Main Content -->
            <!-- Content Row -->
                        <!-- Content Column -->
                          <!-- Content Row -->
                          
                         
                          <div class="container d-flex m-auto p-2">
                            
                            <!-- Start the loop to display each address on a separate card -->
                            <% address?.address.forEach((item, index) => { %>
                              <div class="card mt-3 ml-3" style="width: 18rem;">
                                <div class="card-body ml-3">
                                  <h5 class="card-title">Address<%= index + 1 %> </h5><hr>
                                  <h6 class="card-subtitle mb-2"><%= item.address1 %></h6>
                                  <h6 class="card-subtitle mb-2"><%= item.country %></h6>
                                  <h6 class="card-subtitle mb-2"><%= item.city %></h6>
                                  <h6 class="card-subtitle mb-2"><%= item.state %></h6>
                                  <h6 class="card-subtitle mb-2"><%= item.zip %></h6>
                                  <a href="/editAddress?id=<%= item._id%>" class="card-link">Edit</a>
                                  <a href="/deleteAddress?id=<%= item._id%>" class="card-link">Remove</a>
                                </div>
                              </div>
                            <% }); %>
                            <!-- End of the loop -->
                          </div>
                        </div>
              
                  
                   
                 
                </div>
                
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            
            <!-- End of Footer -->

