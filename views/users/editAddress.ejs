<body>
    <!-- Topbar Start -->
        <%- include('../userLayouts/userHeader') %>
        

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/CSS/sb-admin-2.css" rel="stylesheet">

  <!-- Page Wrapper -->


        <!-- Content Wrapper -->
        <div class="container p-5 bg-dark mt-1">
          <h4 class="text-center text-white"><i class="fa fa-address-card"></i>  EDIT ADDRESS</h4>
   
            <!-- Main Content -->
            <!-- Content Row -->
                        <!-- Content Column -->
                          <!-- Content Row -->
                          
                         
                          
                          <div class="container">
                            <!-- Iterate over each address in the 'address' array -->
                            <% address.address.forEach((item, index) => { %>
                                <div class="row justify-content-center">
                                    <div class="col-md-6">
                                        <form action="/editAddress?id=<%= item._id %>" method="POST">
                                            <div class="form-group pt-2">
                                                <input type="text" name="address1" required class="form-control" placeholder="Address" id="address" value="<%= item.address1 %>">
                                            </div>
                                            <div class="form-group pt-2">
                                                <input type="text" name="country" required class="form-control" placeholder="Country" id="country" value="<%= item.country %>">
                                            </div>
                                            <div class="form-group pt-2">
                                                <input type="text" name="city" required class="form-control" placeholder="City" id="city" value="<%= item.city %>">
                                            </div>
                                            <div class="form-group pt-2">
                                                <input type="text" name="state" required class="form-control" placeholder="State" id="state" value="<%= item.state %>">
                                            </div>
                                            <div class="form-group pt-2">
                                                <input type="number" name="zip" required class="form-control" placeholder="Zip Code" id="zip" value="<%= item.zip %>">
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn btn-warning w-50">Change Address</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            <% }); %>
                            <!-- End of address iteration loop -->
                        </div>
                        
        
                        


              
                  
                   
                 
                </div>
                
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <%- include('../userLayouts/footer') %>
    <div id="popup-container" class="popup-container">
        <div class="popup">
          <span id="success-message"></span>
          <button id="close-popup">Close</button>
        </div>
      </div>
     
